<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gy.dao.LikeDao">

    <select id="selectLikeByBlogId" resultType="Like">
        select l.id,l.blog_id,l.user_id,l.status,l.create_time,l.update_time,l.like_count from t_like l
        where blog_id = #{id};
    </select>

    <insert id="save" parameterType="com.gy.entity.Like">
        insert into t_like (blog_id,user_id,status,create_time,update_time,like_count)
        values (#{blogId},#{userId},#{status},#{createTime},#{updateTime},#{likeCount});
    </insert>

    <insert id="saveAll" parameterType="com.gy.entity.Like">
        <foreach collection="list" item="bean" index="index" open="" close="" separator=";">
            insert into t_like
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="bean.id != null and bean.id != ''">
                    id,
                </if>
                <if test="bean.blogId != null and bean.blogId != ''">
                    blog_id,
                </if>
                <if test="bean.userId != null and bean.userId != ''">
                    user_id,
                </if>
                <if test="bean.status != null and bean.status != ''">
                    status,
                </if>
                <if test="bean.createTime != null">
                    create_time,
                </if>
                <if test="bean.updateTime != null">
                    update_time,
                </if>
                <if test="bean.likeCount != null and bean.likeCount != ''">
                    like_count,
                </if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="bean.id != null and bean.id != ''">
                    #{bean.id},
                </if>
                <if test="bean.blogId != null and bean.blogId != ''">
                    #{bean.blogId},
                </if>
                <if test="bean.userId != null and bean.userId != ''">
                    #{bean.userId},
                </if>
                <if test="bean.status != null and bean.status != ''">
                    #{bean.status},
                </if>
                <if test="bean.createTime != null">
                    #{bean.createTime},
                </if>
                <if test="bean.updateTime != null">
                    #{bean.updateTime},
                </if>
                <if test="bean.likeCount != null and bean.likeCount != ''">
                    #{bean.likeCount},
                </if>
            </trim>
        </foreach>
    </insert>

    <select id="findByBlogIddAndStatus" resultType="Like">
        select l.id,l.blog_id,l.user_id,l.status,l.create_time,l.update_time,l.like_count from t_like l
        where l.blog_id = #{blogId} and l.status = #{code};
    </select>

    <select id="findByUserIdAndBlogId" resultType="Like">
        select l.id,l.blog_id,l.user_id,l.status,l.create_time,l.update_time,l.like_count from t_like l
        where l.blog_id = #{blogId} and l.user_id = #{userId};
    </select>

    <select id="getAllLike" resultType="com.gy.entity.vo.LikedCountDTO">
        select l.blog_id,l.like_count from t_like l;
    </select>

    <!--编辑修改文章-->
    <update id="updateLikeCountByBlogId">
        update t_like set
        like_count=#{likeCount}
        where blog_id=#{blogId};
    </update>

    <!--编辑修改文章-->
    <update id="updateStatusByBlogId">
        update t_like set
        status=#{status}
        where blog_id=#{blogId};
    </update>

</mapper>
